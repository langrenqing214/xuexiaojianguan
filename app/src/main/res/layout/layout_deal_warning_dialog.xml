<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　　　处理人:"
            android:textSize="15dp"
            android:textColor="@color/text_gray_color"
            />

        <EditText
            android:id="@+id/et_deal_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_gray_line_box"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_gray_color"
            android:hint="请输入处理人"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　　处置结论:"
            android:textSize="15dp"
            android:textColor="@color/text_gray_color"
            />

        <TextView
            android:id="@+id/tv_deal_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_gray_line_box"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_gray_color"
            android:hint="请选择处置结论"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_num"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置结论说明:"
            android:textSize="15dp"
            android:textColor="@color/text_gray_color"
            />

        <EditText
            android:id="@+id/tv_deal_result_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_gray_line_box"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_gray_color"
            android:hint="请输入处置结论说明"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　　处置措施:"
            android:textSize="15dp"
            android:textColor="@color/text_gray_color"
            />

        <EditText
            android:id="@+id/et_deal_step"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_gray_line_box"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_gray_color"
            android:hint="请输入处置措施"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/btn_green_box"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</LinearLayout>