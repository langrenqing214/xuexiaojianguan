<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="试吃跟进"
        android:textColor="@color/main_text_color"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_select_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="22dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textColor="@color/main_text_color"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_normal"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="22dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常"
                android:textColor="@color/main_text_color"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_error"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_error" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_interval_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:hint="请输入间隔时间"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_gray_line_box"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_status_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:hint="请选择反应时间"
        android:textSize="15dp"
        android:background="@drawable/bg_white_gray_line_box"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_remarks"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="top"
        android:hint="请输入反应描述"
        android:textSize="15dp"
        android:background="@drawable/bg_white_gray_line_box"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        />
    
    <Button
        android:id="@+id/btn_deal_trial"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_green_box"
        android:text="提交"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>