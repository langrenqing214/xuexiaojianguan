<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/default_back_layout"
        android:layout_width="@dimen/app_default_actionbar_height"
        android:layout_height="@dimen/app_default_actionbar_height"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_bg_back_selector"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_back_dark"></ImageView>
    </LinearLayout>


    <TextView
        android:id="@+id/actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/default_back_layout"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="6dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/title_text"
        android:textSize="17dp" />


</RelativeLayout>
